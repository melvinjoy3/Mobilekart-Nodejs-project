<section>
  <div class="container">
    {{!-- <div class="row mt-4">
      <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
    </div> --}}
    <table class="table mt-4">
      <thead>
        <tr>

          <th scope="col">Date</th>
          <th>Addess</th>
          <th>Pincode</th>
          <th>Mobile</th>
          <th scope="col">Amount</th>
          <th scope="col">Payment</th>
          <th>Status</th>
          <th></th>

        </tr>
      </thead>
      <tbody>
        {{#each orders}}
        <tr>

          <td>{{this.date}}</td>
          <td>{{this.deliveryDetails.address}}</td>
          <td>{{this.deliveryDetails.pincode}}</td>
          <td>{{this.deliveryDetails.mobile}}</td>
          <td>{{this.totalAmount}}</td>
          <td>{{this.paymentMethod}}</td>
          <td>{{this.status}}</td>
          <td>

            <a href="/view-order-products/{{this._id}}" class="btn btn-primary">View
              Products</a>

          </td>
          <td style='text-align:center;vertical-align:middle'>

            <a href="/deleteUser-order/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('Are you want to delete this user
              {{this.Name}} ?')">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>

  </div>
</section>